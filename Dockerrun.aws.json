{
    "AWSEBDockerrunVersion":2,
    "containerDefinitions": [
        {
            "name": "client",
            "image": "adenijiazeez/multi-client",
            "hostname": "client",
            "essential": false,
            "memory": 128
        },
        {
            "name": "server",
            "image": "adenijiazeez/multi-server",
            "hostname": "api",
            "essential": false,
            "memory": 128
        },
        {
            "name": "worker",
            "image": "adenijiazeez/multi-worker",
            "hostname": "worker",
            "essential": false,
            "memory": 128
        },
        {
            "name": "nginx",
            "image": "adenijiazeez/multi-nginx",
            "hostname": "nginx",
            "essential": true,
            "memory": 128,
            "portmappings": [
                {
                "hostPort": 80,
                "containerPort":80
                }
            ],
            "links": ["client","server"]
        }
    ]
}